{
  "name": "CharV-OAS",
  "version": "0.1.0",
  "repository": "ssh://git@github.com/CharVstack/CharV-OAS",
  "license": "MIT",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@stoplight/spectral-cli": "^6.4.0",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "redoc-cli": "^0.13.14",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0"
  },
  "lint-staged": {
    "./src/*": "spectral lint ./src/*"
  },
  "scripts": {
    "lint": "spectral lint ./src/*",
    "generate:typescript:v1": "rimraf ./frontend/src/api-hooks/client/v1 && openapi-generator-cli generate -g typescript-fetch -i ./src/* -o ./frontend/src/api-hooks/client/v1 --additional-properties=typescriptThreePlus=true --additional-properties=withInterfaces=true",
    "generate:go:v1": "rimraf ./backend/models && openapi-generator-cli generate -g go-gin-server -i ./src/* -o ./backend/v1 && goimports -w ./backend/v1",
    "test": "npm-run-all test:*",
    "test:redoc": "redoc-cli test ./src/*",
    "test:oas": "find ./src -name \"*.yaml\" -exec openapi-generator-cli validate -i {} \\;",
    "build": "redoc-cli build ./src/* -o docs/index.html",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn run lint-staged",
    "pre-push": "yarn test"
  }
}
